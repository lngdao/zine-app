{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "types": ["jest", "node"],
    // "noEmit": true,
    // "incremental": true,
    // "isolatedModules": true,
    "baseUrl": ".",
